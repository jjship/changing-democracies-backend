# Application settings
PORT=8080
NODE_ENV=development

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_key_here

# SQLite database (used in development and for migration source)
DB_DATABASE=database.sqlite

# Neon PostgreSQL settings (destination for migration)
USE_NEON_DB=true
NEON_DB_HOST=your-db-id-pooler.us-east-2.aws.neon.tech
NEON_DB_PORT=5432
NEON_DB_USERNAME=your_username
NEON_DB_PASSWORD=your_password
NEON_DB_DATABASE=your_database_name
NEON_DB_SSL=true

# Server Configuration
BACKEND_HOST=cd_backend
BACKEND_PORT=8083

# Database Configuration
TEST_DATABASE=cd_backend.test.db

# Bunny Stream Configuration
BUNNY_STREAM_BASE_URL=https://video.bunnycdn.com
BUNNY_STREAM_API_KEY=your-api-key
BUNNY_STREAM_LIBRARY_ID=your-library-id
BUNNY_STREAM_PULL_ZONE=your-pull-zone
BUNNY_STREAM_COLLECTION_ID=your-collection-id

# Country Layer Configuration
COUNTRY_LAYER_BASE_URL=http://api.countrylayer.com/v2
COUNTRY_LAYER_API_KEY=your-api-key
SYNC_COUNTRIES=false

# Supabase Authentication
SUPABASE_JWT_SECRET=your-jwt-secret